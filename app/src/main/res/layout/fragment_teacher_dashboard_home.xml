<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/dashbord_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/displayname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"

            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="---"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/dpandlogout"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:src="@drawable/ic_baseline_login_24" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dashboard_mainview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dashbord_topbar"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"


        android:layout_marginRight="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"

            android:layout_height="100dp"
            android:background="#1e59f6"
            android:backgroundTint="#44B5F3"
            app:cardCornerRadius="5dp"
            app:cardElevation="8dp"

            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Welcome to Teachers.IO"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:layout_marginTop="50dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center"
                        android:text="MAR"
                        android:textColor="#fff"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/datecircle"
                        android:gravity="center"
                        android:text="05"

                        android:textSize="18sp"
                        android:textStyle="bold" />


                </LinearLayout>


            </RelativeLayout>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dashboard_mainview">


        <androidx.cardview.widget.CardView
            android:id="@+id/card_ImgMakeAnnouncement"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="20dp"

            android:layout_marginBottom="10dp"

            app:cardCornerRadius="16dp">

            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/ImgMakeAnnouncement"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/loudspeaker" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/ImgMakeAnnouncement"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Make an Announcement"
                        android:textSize="16sp"
                        tools:text="Make an Announcement" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Tap here, to make an Announcement."
                        android:textSize="12sp"

                        />


                </LinearLayout>


            </RelativeLayout>


        </androidx.cardview.widget.CardView>


    </ScrollView>


</RelativeLayout>