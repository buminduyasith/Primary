<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TIL_event_title"
        android:layout_width="match_parent"
        app:errorEnabled="true"
        app:endIconMode="clear_text"
        style="@style/LoginTextInputLayoutStyle"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:hint="Add an Event.." />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TIL_grade"
        android:layout_below="@+id/TIL_event_title"
        android:layout_width="match_parent"
        app:errorEnabled="true"
        app:endIconMode="clear_text"
        style="@style/LoginTextInputLayoutStyle"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:singleLine="true"
            android:maxLength="1"
            android:imeOptions="actionDone"
            android:hint="Grade" />


    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/TIL_event_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a date"
        android:layout_centerInParent="true"
        android:layout_below="@id/TIL_grade"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:textColor="@color/ytplayingtext"
        />






</RelativeLayout>